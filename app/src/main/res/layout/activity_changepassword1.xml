<?xml version="1.0" encoding="utf-8"?>

<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingTop="70dp"
    android:paddingBottom="65dp"
    android:paddingRight="45dp"
    android:paddingLeft="45dp"
    android:background="#000000"
    >


    <TableRow>
        <ImageView
            android:layout_height="75dp"
            android:layout_width="300dp"
            android:layout_weight="3"
            android:src="@drawable/current"
            android:paddingBottom="40dp"/>
    </TableRow>
    <TableLayout>
        <TableRow
            android:layout_weight="1">

            <Button
                android:layout_width="90dp"
                android:layout_weight="1"
                android:layout_height="90dp"
                android:id="@+id/button1"
                android:background="@drawable/k1"
                android:layout_margin="10px"/>
            <Button
                android:layout_width="90dp"
                android:layout_weight="1"
                android:layout_height="90dp"
                android:id="@+id/button2"
                android:background="@drawable/k2"
                android:layout_margin="10px"/>
            <Button
                android:layout_width="90dp"
                android:layout_weight="1"
                android:layout_height="90dp"
                android:id="@+id/button3"
                android:background="@drawable/k3"
                android:layout_margin="10px"/>
        </TableRow>

        <TableRow
            android:layout_weight="1">
            <Button
                android:layout_width="90dp"
                android:layout_weight="1"
                android:layout_height="90dp"
                android:id="@+id/button4"
                android:background="@drawable/k4"
                android:layout_margin="10px"/>
            <Button
                android:layout_width="90dp"
                android:layout_weight="1"
                android:layout_height="90dp"
                android:id="@+id/button5"
                android:background="@drawable/k5"
                android:layout_margin="10px" />
            <Button
                android:layout_width="90dp"
                android:layout_weight="1"
                android:layout_height="90dp"
                android:id="@+id/button6"
                android:background="@drawable/k6"
                android:layout_margin="10px" />
        </TableRow>

        <TableRow
            android:layout_weight="1">
            <Button
                android:layout_width="90dp"
                android:layout_weight="1"
                android:layout_height="90dp"
                android:id="@+id/button7"
                android:background="@drawable/k7"
                android:layout_margin="10px"/>
            <Button
                android:layout_width="90dp"
                android:layout_weight="1"
                android:layout_height="90dp"
                android:id="@+id/button8"
                android:background="@drawable/k8"
                android:layout_margin="10px"/>
            <Button
                android:layout_width="90dp"
                android:layout_weight="1"
                android:layout_height="90dp"
                android:id="@+id/button9"
                android:background="@drawable/k9"
                android:layout_margin="10px" />
        </TableRow>

        <TableRow
            android:layout_weight="1">
            <Button
                android:layout_width="90dp"
                android:layout_weight="1"
                android:layout_height="90dp"
                android:id="@+id/reset"
                android:background="@drawable/kbackspace"
                android:layout_margin="10px" />
            <Button
                android:layout_width="90dp"
                android:layout_weight="1"
                android:layout_height="90dp"
                android:id="@+id/button0"
                android:background="@drawable/k0"
                android:layout_margin="10px" />
            <Button
                android:layout_width="90dp"
                android:layout_weight="1"
                android:layout_height="90dp"
                android:id="@+id/my_insert"
                android:background="@drawable/kdone"
                android:layout_margin="10px" />
        </TableRow>
    </TableLayout>
</TableLayout>